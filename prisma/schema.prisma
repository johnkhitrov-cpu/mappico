generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PointCategory {
  PLACE
  FOOD
  STAY
  ACTIVITY
  OTHER
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  passwordHash  String
  createdAt     DateTime        @default(now())

  points        Point[]
  trips         Trip[]
  sentRequests  FriendRequest[] @relation("SentRequests")
  receivedRequests FriendRequest[] @relation("ReceivedRequests")
}

model Point {
  id          String        @id @default(cuid())
  userId      String
  lat         Float
  lng         Float
  title       String
  description String?
  photoUrl    String?
  category    PointCategory @default(PLACE)
  createdAt   DateTime      @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tripPoints  TripPoint[]

  @@index([userId])
}

model FriendRequest {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  fromUser   User     @relation("SentRequests", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser     User     @relation("ReceivedRequests", fields: [toUserId], references: [id], onDelete: Cascade)

  @@index([fromUserId])
  @@index([toUserId])
  @@unique([fromUserId, toUserId])
}

model Trip {
  id                  String    @id @default(cuid())
  ownerId             String
  title               String
  description         String?
  visibility          String    @default("PRIVATE")
  shareToken          String?   @unique
  shareTokenCreatedAt DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  owner       User        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tripPoints  TripPoint[]

  @@index([ownerId])
  @@index([shareToken])
}

model TripPoint {
  id        String   @id @default(cuid())
  tripId    String
  pointId   String
  order     Int      @default(0)
  note      String?
  createdAt DateTime @default(now())

  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  point     Point    @relation(fields: [pointId], references: [id], onDelete: Cascade)

  @@unique([tripId, pointId])
  @@index([tripId])
  @@index([pointId])
}
